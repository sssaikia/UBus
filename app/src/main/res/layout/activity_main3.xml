<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fnBtn="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sstudio.com.ubus.Main3Activity"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Bus"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/spinnerBusList"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/spinner_background" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:textSize="20sp"
        android:hint="User id"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:textSize="20sp"
        android:hint="Password"
        android:inputType="textPassword" />

    <com.ekalips.fancybuttonproj.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogin"
        fnBtn:btnStyle="stroke_fill"
        fnBtn:capsText="false"
        fnBtn:hideFillAfterCollapse="false"
        fnBtn:fillColor="@color/green"
        fnBtn:progressColor="@android:color/holo_red_light"
        fnBtn:textColor="#000"
        fnBtn:text="Submit"/>

</LinearLayout>
